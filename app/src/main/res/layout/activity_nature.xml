<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NatureActivity">

    <ImageView
        android:id="@+id/imgview7"
        android:layout_width="405dp"
        android:layout_height="364dp"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nature" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="408dp"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/tvtext5"
        android:layout_width="348dp"
        android:layout_height="106dp"
        android:layout_marginTop="44dp"
        android:text="Nature is beutiful and fresh always!!!"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgview7" />

    <Button
        android:id="@+id/btnlast"
        android:layout_width="149dp"
        android:layout_height="71dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:text="previous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvtext5" />

</androidx.constraintlayout.widget.ConstraintLayout>